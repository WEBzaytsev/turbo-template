{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": [
    "**/dist/**",
    "**/.next/**",
    "**/build/**",
    "**/*.d.ts",
    "**/public/**",
    "**/node_modules/**"
  ],
  "ignoreBinaries": [],
  "ignoreDependencies": ["eslint-import-resolver-typescript", "rimraf", "@repo/eslint-config"],
  "ignoreExportsUsedInFile": false,
  "includeEntryExports": true,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "unlisted": "error",
    "exports": "error",
    "types": "warn",
    "nsTypes": "error",
    "enumMembers": "error",
    "classMembers": "error",
    "duplicates": "error",
    "nsExports": "error",
    "unresolved": "error"
  },
  "workspaces": {
    "apps/api": {
      "entry": ["src/main.ts!"],
      "project": ["src/**/*.ts"],
      "ignore": ["dist/**"]
    },
    "apps/web": {
      "entry": ["app/**/*.tsx!"],
      "project": ["app/**/*.{ts,tsx}", "components/**/*.{ts,tsx}"],
      "ignore": [".next/**", "out/**", "public/**"],
      "next": {
        "entry": ["app/layout.tsx!", "app/page.tsx!", "app/**/page.tsx!", "app/**/layout.tsx!"]
      }
    },
    "packages/eslint-config": {
      "entry": ["*.js!", "*.cjs!"],
      "project": ["**/*.{js,cjs}"]
    },
    "packages/typescript-config": {
      "entry": ["*.json!"],
      "project": ["**/*.json"]
    }
  }
}
