{
  "name": "turbo-template-zbn",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:turbo": "rm -rf .turbo && rm -rf apps/*/.turbo && rm -rf packages/*/.turbo",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss,yaml,yml}\"",
    "knip": "knip --no-exit-code",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prelint": "pnpm format",
    "prelint:fix": "pnpm format",
    "sdk": "turbo run sdk",
    "syncpack:check": "syncpack lint",
    "syncpack:fix": "syncpack fix-mismatches && syncpack format",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov"
  },
  "devDependencies": {
    "knip": "5.82.1",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-packagejson": "3.0.0",
    "prettier-plugin-sh": "0.18.0",
    "prettier-plugin-sort-json": "4.2.0",
    "prettier-plugin-sql": "0.19.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "rimraf": "6.1.2",
    "syncpack": "13.0.4",
    "turbo": "2.8.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
