{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typia/lib/transform"
      },
      {
        "transform": "@nestia/core/lib/transform"
      },
      {
        "transform": "@nestia/sdk/lib/transform"
      }
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "@repo/typescript-config/nestjs.json",
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}